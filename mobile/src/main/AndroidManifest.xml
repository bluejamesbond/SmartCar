<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.smartcar"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".common.ReferencedApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar">

        <meta-data
            android:name="DATABASE"
            android:value="habitkick.db"/>
        <meta-data
            android:name="VERSION"
            android:value="2"/>
        <meta-data
            android:name="QUERY_LOG"
            android:value="true"/>
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.habitkick"/>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <activity
            android:name="com.smartcar.activity.StartActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.DiscoverActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance"/>
        <activity
            android:name="com.smartcar.activity.DashboardActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance"/>

        <service
            android:name="com.smartcar.core.MobileListenerService"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER"/>
            </intent-filter>
        </service>

    </application>

</manifest>
